<Window x:Class="waabe_navi_mcpserver.Dialogs.PortConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MCP Server Konfiguration" 
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Grid.Row="0" 
                   Text="MCP Server Configuration" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"/>

        <!-- Beschreibung -->
        <TextBlock Grid.Row="2" 
                   Text="Please enter the port for the MCP server:"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Left"/>

        <!-- Port Eingabe -->
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label Content="Port:" VerticalAlignment="Center" Width="60"/>
            <TextBox x:Name="PortTextBox" 
                     Width="100" 
                     Height="25"
                     VerticalAlignment="Center"
                     PreviewTextInput="PortTextBox_PreviewTextInput"
                     MaxLength="5"/>
            <TextBlock Text="(Nur Zahlen, 1024-65535)" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0" 
                       Foreground="Gray" 
                       FontSize="11"/>
        </StackPanel>

        <!-- Validierung -->
        <TextBlock x:Name="ValidationMessage" 
                   Grid.Row="6" 
                   Foreground="Red" 
                   FontSize="11" 
                   Visibility="Collapsed"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0" 
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button x:Name="CancelButton" 
                    Content="Abbrechen" 
                    Width="80" 
                    Height="30" 
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>